{
  "Application": {
    "EventStoreConnectionString": "tcp://admin:changeit@localhost:1113",
    "SourceStreamName" : "AllDomainEvents",
    "Snapshot": {
      "Name": "EventStoreMessageDispatcher",
      "PeriodMs": 10000
    },
    "DestinationServiceUri" : "http://localhost:5000/DomainEvent/Apply"
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "RollingFile", "Args": { "pathFormat": "logs/dispatcher-{Date}.txt" } }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "EventStoreDomainEventDispatcher"
    }
  },
  
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
